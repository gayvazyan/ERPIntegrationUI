@page "{id:Guid}"
@model ERP.IntegrationUI.Pages.Management.Owners.UpdateModel


@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Խմբագրել Owner";
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}


@if (HttpContextAccessor.HttpContext.Session.GetString("token") != string.Empty)
{
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Update.Id" />
        <div class="card card-input">
            <div class="card-body p-0 d-flex align-items-center">
                <i class="cil-sync bg-primary p-4 px-5 font-2xl mr-3 text-white"></i>
                <div>
                    <div class="text-value-sm text-info">@ViewData["Title"]</div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body row">
                <div class="m-3 p-3 w-100" style="max-width:900px">
                    <div>
                        <partial name="_ValidationSummary" />
                        @if (Model.Errors.Count > 0)
                        {
                            <div class="alert alert-danger" role="alert">
                                <ul>
                                    @foreach (var error in Model.Errors)
                                    {
                                        <li>@error.Code: @error.Description</li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <label class="text-info" asp-for="Update.Name">Name</label>
                            <input class="form-control" type="text" asp-for="Update.Name">
                            <span asp-validation-for="Update.Name" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label class="text-info" asp-for="Update.Description">Description</label>
                            <input class="form-control" type="text" asp-for="Update.Description">
                            <span asp-validation-for="Update.Description" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-6">
                            <label class="text-info" asp-for="Update.FirstName">First Name</label>
                            <input class="form-control" type="text" asp-for="Update.FirstName">
                            <span asp-validation-for="Update.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label class="text-info" asp-for="Update.LastName">Last Name</label>
                            <input class="form-control" type="text" asp-for="Update.LastName">
                            <span asp-validation-for="Update.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-6">
                            <label class="text-info" asp-for="Update.AdditionalData">Additional Data</label>
                            <input class="form-control" type="text" asp-for="Update.AdditionalData">
                            <span asp-validation-for="Update.AdditionalData" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label class="text-info" asp-for="Update.IsActive">Is Active</label>
                            <input class="form-control" type="checkbox" asp-for="Update.IsActive">
                            <span asp-validation-for="Update.IsActive" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    

                    <div style="height:20px"></div>
                    <div class="row border-top margin-top-20" style="padding-top:20px">
                        <div class="col-12">
                            <button class="btn btn-primary text-white"><i class="cil-sync"></i> Խմբագրել</button>
                            <a class="btn btn-secondary" asp-page="/Management/Contacts/Index"><i class="cil-x-circle"></i> Չեղարկել</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="alert alert-danger m-3" role="alert">
        <h5>Այս տվյալներին հասանելիություն չունեք։</h5>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



